{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "noEmit": true,
    "pretty": true,
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "allowJs": true,
    "lib": ["es6", "dom"],
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "src/typings/*"],
      "#config/*": ["config/*"],
      "#server": ["src/server"],
      "#server/*": ["src/server/*"],
      "#shared": ["src/shared"],
      "#shared/*": ["src/shared/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"],
  "include": ["src/**/*", "config/**/*", "scripts/**/*"],
  "awesomeTypescriptLoaderOptions": {
    "useCache": false,
    "useBabel": true,
    "babelCore": "@babel/core",
    "forceIsolatedModules": true
  }
}
